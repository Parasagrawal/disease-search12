<script defer>

    function addItem() {
        let tag = document.createElement("input");
        tag.className = "form-control"
        tag.name = "Symtoms"
        tag.type = "text"
        tag.required = true
        tag.placeholder = "type symptom here"


        document.getElementById("Symtom").appendChild(tag)

    }
    function addItem1() {
        let tag = document.createElement("input");
        tag.className = "form-control"
        tag.name = "causes"
        tag.type = "text"
        tag.required = true
        tag.placeholder = "type causes here"

        document.getElementById("Causes").appendChild(tag)

    }
    function addItem2() {
        let tag = document.createElement("input");
        tag.className = "form-control"
        tag.name = "Prevention"
        tag.type = "text"
        tag.required = true
        tag.placeholder = "type Prevention here"

        document.getElementById("Prevention").appendChild(tag)

    }
</script>
