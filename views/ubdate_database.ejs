<div class="container" style="margin-top:5em">
    <form method="post" action="/form">
        <h1>ADD DISEASES</h1><br><br>
        <div class="mb-3">
            <label for="Name" class="form-label"
                style="text-transform: capitalize; font-style: serif;font-size: 20px;">Disease
                Name</label>
            <input type="text" class="form-control" id="Name" name="name" placeholder="type disease name here" required>
        </div>

        <div class="mb-3 " id="about">
            <label for="about" class="form-label"
                style="text-transform: capitalize; font-style: serif;font-size: 20px;">About Disease
            </label>
            <input type="text" class="form-control" placeholder="type about disease here" name="about_disease" required>
        </div>

        <div class="mb-3 " id="Symtom">
            <label for="Symtoms" class="form-label"
                style="text-transform: capitalize; font-style: serif;font-size: 20px;">Symptom
            </label>
            <input type="text" class="form-control" placeholder="type symptom here" name="Symtoms" required>
        </div>
        <div class="mb-3 ">
            <button type="button" class="btn btn-primary" onClick="addItem()">Add more Symptom</button>
        </div>



        <div class="mb-3 " id="Causes">
            <label for="causes" class="form-label"
                style="text-transform: capitalize; font-style: serif;font-size: 20px;">Causes</label>
            <input type="text" class="form-control" placeholder="type causes here" name="causes" required>
        </div>
        <div class="mb-3 ">
            <button type="button" class="btn btn-primary" onClick="addItem1()">Add more causes</button>
        </div>

        <div class="mb-3 " id="Prevention">
            <label for="Prevention" class="form-label"
                style="text-transform: capitalize; font-style: serif;font-size: 20px;">Prevention</label>
            <input type="text" class="form-control" placeholder="type prevention here" name="Prevention" required>
        </div>
        <div class="mb-3 ">
            <button type="button" class="btn btn-primary" onClick="addItem2()">Add more Prevention</button>
        </div>


        <button type="submit" class="btn btn-outline-danger">Submit</button>
    </form>
    <br>

</div>