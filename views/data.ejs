<style>
    body {

        background-image: url("images/back8extend2.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>
<div>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">DISEASE_Search</a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0"> </ul>
                <% if(userislogin===true ) { %>
                    <a href="/logout" class="me-2 btn " style="color: rgb(255, 251, 251);text-decoration: none"
                        title="Logout">Logout</a>
                    <% } %>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:5em">
        <h1 style="text-transform: capitalize;">
            <%= disease_name%>
        </h1>

        <br>
        <div style="font-weight: bold;">

            <%= pop4[0].disease_data%>
        </div>

        <br><br>
        <h3>Symptom</h3>
        <hr>
        <ul class="list-group list-group-flush">
            <% pop1.forEach((row,index)=> { %>
                <li class="list-group-item" style="background-color:transparent;text-transform: capitalize;">
                    <%= row.symtom_name%>
                </li>
                <% }) %>
        </ul>
        <br><br><br><br>
        <h3>Causes</h3>
        <hr>
        <ul class="list-group list-group-flush">
            <% pop2.forEach((row,index)=> { %>
                <li class="list-group-item" style="background-color:transparent;text-transform: capitalize;">
                    <%= row.cause%>


                </li>
                <% }) %>

        </ul>
        <br><br>
        <br><br>

        <h3>Prevention</h3>
        <hr>
        <ul class=" list-group list-group-flush">
            <% pop3.forEach((row,index)=> { %>
                <li class="list-group-item" style="background-color:transparent;text-transform: capitalize; ">
                    <%= row.prevention %>


                </li>
                <% }) %>

        </ul>
        <br><br>
    </div>


</div>




</div>