</div>


<script>
    function popup() {
        let name1 = document.getElementById("name1").value
        let email = document.getElementById("email").value
        let message = document.getElementById("message").value
        if (name1 !== "" && email !== "" && message !== "") {
            var p = `<div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Form Submited successfully</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>`

            document.getElementById("popup1").innerHTML = p;
            setTimeout(() => {
                document.getElementById("popup1").innerHTML = "";

            }, 4000)
        }


    }
</script>